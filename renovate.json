{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "github>SlashNephy/renovate-config"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "ghcr.io/slashnephy{/,}**"
      ],
      "minimumReleaseAge": null,
      "versioning": "loose"
    },
    {
      "matchFileNames": [
        "k8s/apps/mahiron/**",
        "k8s/apps/epgstation/**"
      ],
      "automerge": false
    },
    {
      "groupName": "immich",
      "matchDatasources": [
        "docker"
      ],
      "matchPackageNames": [
        "ghcr.io/immich-app/**"
      ]
    }
  ],
  "rebaseWhen": "conflicted"
}
